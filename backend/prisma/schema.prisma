generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  theme     String    @default("light") // "light" ou "dark"
  createdAt DateTime  @default(now())
  transactions Transaction[]
  invoiceUploads InvoiceUpload[]
  budgets Budget[]
  goals Goal[]
  recurringTransactions RecurringTransaction[]
  accounts Account[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  description String
  category    String
  amount      Float
  type        String   @default("expense") // "income" ou "expense"
  date        DateTime
  card        String?
  installments Int?
  isPaid      Boolean  @default(true)
  accountId   Int?     // Conta banc√°ria associada
  account     Account? @relation(fields: [accountId], references: [id])
  createdAt   DateTime @default(now())
}

model InvoiceUpload {
  id        Int @id @default(autoincrement())
  userId    Int
  user      User @relation(fields: [userId], references: [id])
  path      String
  rawText   String
  createdAt DateTime @default(now())
}

model Budget {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  month     Int      // 1-12
  year      Int
  category  String
  limit     Float
  createdAt DateTime @default(now())
  
  @@unique([userId, month, year, category])
}

// üéØ Metas Financeiras
model Goal {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  name        String   // "Viagem para praia", "Reserva de emerg√™ncia"
  targetAmount Float   // Valor alvo (ex: 5000)
  currentAmount Float  @default(0) // Valor atual poupado
  deadline    DateTime? // Data limite (opcional)
  category    String   @default("Outros") // Categoria da meta
  color       String   @default("#3B82F6") // Cor para visualiza√ß√£o
  icon        String   @default("piggy-bank") // √çcone
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// üîÑ Lan√ßamentos Recorrentes
model RecurringTransaction {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  description String   // "Aluguel", "Netflix", "Sal√°rio"
  category    String
  amount      Float
  type        String   // "income" ou "expense"
  frequency   String   // "monthly", "weekly", "yearly"
  dayOfMonth  Int?     // Dia do m√™s (1-31) para frequ√™ncia mensal
  dayOfWeek   Int?     // Dia da semana (0-6) para frequ√™ncia semanal
  startDate   DateTime // Data de in√≠cio
  endDate     DateTime? // Data de fim (opcional)
  isActive    Boolean  @default(true)
  lastGenerated DateTime? // √öltima vez que gerou transa√ß√£o
  accountId   Int?     // Conta banc√°ria associada
  account     Account? @relation(fields: [accountId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// üè¶ Contas Banc√°rias
model Account {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  name        String   // "Nubank", "Ita√∫", "Poupan√ßa"
  type        String   // "checking", "savings", "credit", "investment"
  balance     Float    @default(0)
  creditLimit Float?   // Limite do cart√£o (apenas para type="credit")
  usedCredit  Float    @default(0) // Cr√©dito utilizado (apenas para type="credit")
  color       String   @default("#3B82F6")
  icon        String   @default("bank")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactions Transaction[]
  recurringTransactions RecurringTransaction[]
}
